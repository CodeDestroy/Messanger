<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="/css/bootstrap.min.css" rel="stylesheet" type='text/css'>

    <link href='https://fonts.googleapis.com/css?family=Montserrat' rel='stylesheet' type='text/css'>
    <link href="/css/style.css" rel="stylesheet" type="text/css">

    <title>Главная страница</title>
</head>
<body class="text-center login-form">
  <div class="registration-cssave">
    <form method="post" id="authForm">
        <h3 class="text-center">Форма входа</h3>
        <div class="form-group">
            <input class="form-control item" type="text" name="User_nick" maxlength="15" minlength="4" id="User_nick" placeholder="Логин" required>
        </div>
        <div class="form-group">
            <input class="form-control item" type="password" name="User_pass" minlength="4" id="User_pass" placeholder="Пароль" required>
        </div>
        <div class="form-group">
            <button class="btn btn-primary btn-block create-account" type="submit" formaction="/auth/login">Вход в аккаунт</button>
            
            <button type="button" class="btn btn-primary btn-block create-account" data-bs-toggle="modal" data-bs-target="#authFormModal">
              Регистрация
            </button>
            <!-- <button class="btn btn-primary btn-block create-account" type="submit" formaction="/auth/registration">Регистрация</button> -->
        </div>
    </form> 
  </div>

 



  <form method="post" id="authFormModal2">
    <div class="modal fade" id="authFormModal" tabindex="-1" aria-labelledby="ModalLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="ModalLabel">Регистрация</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Закрыть"></button>
          </div>
          <div class="modal-body">
            <div class="form-group my-4">
              <input class="form-control item" type="text" name="User_nick_reg" maxlength="15" minlength="4" id="User_nick_reg" placeholder="Логин" required>
            </div>
            <div class="form-group my-4">
                <input class="form-control item" type="password" name="User_pass_reg" minlength="4" id="User_pass_reg" placeholder="Пароль" required>
            </div>
            <div class="form-group my-4">
              <input class="form-control item" type="text" name="User_name" minlength="4" id="User_name" placeholder="Имя" required>
            </div>
            <div class="form-group my-4">
              <input class="form-control item" type="text" name="User_surname" minlength="4" id="User_surname" placeholder="Фамилия" required>
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Закрыть</button>
            <button class="btn btn-primary btn-block create-account" type="submit" formaction="/auth/registration">Регистрация</button>
          </div>
        </div>
      </div>
    </div>
  </form> 
  

</body>
<script src="../js/bootstrap.min.js"></script>
</html>

